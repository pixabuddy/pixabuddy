RewriteCond %{HTTP_REFERER} !^http://www.pixabuddy.com$      [NC]
RewriteCond %{HTTP_REFERER} !^https://pixabuddy.com/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^https://pixabuddy.com$      [NC]
RewriteCond %{HTTP_REFERER} !^https://www.pixabuddy.com/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^https://www.pixabuddy.com$      [NC]
# RewriteRule .*\.(jpg|jpeg|gif|png|bmp)$ - [F,NC]

